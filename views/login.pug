doctype html
html
  head
    link#bootstrap-css(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style_login.css')  
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
    title Mr.Manager
  body
    .container
      .row
        .col-md-3
        .col-md-6
          != messages('message',locals)
          if errors
            each error, i in errors
              div(class="alert alert-success_msg") #{error.msg}
      h1 Mr.Manager 
      .d-flex.justify-content-center
        .card
          .card-header
            h3 Sign In
            .social_icon
              span
                i.fab.fa-facebook-square(href='#')
              span
                i.fab.fa-twitter-square
              span
                i.fab.fa-google-plus-square
                
          .card-body
            form(method='POST' , action='/')
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-user
                input.form-control(type='text',id='username', placeholder='Username',name='username')
              .input-group.form-group
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-key
                input.form-control(type='password',id='password' placeholder='Password',name='password')
              .form-group
                br
                br
                input.btn.float-right.login_btn(type='submit', value='Login')
          .card-footer
            .d-flex.justify-content-center.links
              | Don't have an account?
              a(href='/user/register') Sign Up
            
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
