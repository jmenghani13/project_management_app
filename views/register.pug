doctype html
html
  head
    link#bootstrap-css(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style_register.css')  
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.3.1/css/all.css', integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU', crossorigin='anonymous')
    title Mr.Manager
  body
    .container
      .row
        .col-md-3
        .col-md-6
          != messages('message',locals)
          if errors
            each error, i in errors
              div(class="alert alert-success_msg") #{error.msg}
      h1 Mr.Manager
      .d-flex.justify-content-center
        .card
          .card-header
            h3 Register
            .social_icon
              span
                i.fab.fa-facebook-square(href='#')
              span
                i.fab.fa-twitter-square
              span
                i.fab.fa-google-plus-square
                
          .card-body
            form(method='POST' , action='/user/register')
                #form-group
                  label.label Name:
                  input.form-control(name='name', type='text')
                #form-group
                  label.label DOB:
                  input.date.form-control(name='dob', type='date')
                #form-group
                  label.label Gender:
                  select.form-control(name='gender')
                    option(value='' selected='true' disabled='disabled') Select your gender.
                    option(value='Male') Male
                    option(value='Female') Female
                    option(value='Other') Other
                #form-group
                  label.label Email:
                  input.form-control(name='email', type='text')
                #form-group
                  label.label Username:
                  input.form-control(name='username', type='text')
                #form-group
                  label.label Password:
                  input.form-control(name='password', type='password')
                #form-group
                  label.label Confirm Password:
                  input.form-control(name='password2', type='password')
                br
                br
                input.btn.float-right.login_btn(type='submit', value='Register')
                  
            
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
